from tkinter import *

# CARD START
from functools import total_ordering
import random
from tkinter import PhotoImage
from card import Player, Poker, get_key


class Finals(Frame):

    def __init__(self):
        Frame.__init__(self)
        p = Poker()
        p.shuffle()
        players = [Player('东邪'), Player('西毒'), Player('南帝'), Player('北丐')]
        for _ in range(13):
            for player in players:
                player.get(p.next)

        for player in players:
            print(player.name + ':', end=' ')
            player.arrange(get_key)
            print(player.cards_on_hand)


    def start(self):
        n = Label(text='北丐', anchor=N)
        n.config(width=50)
        n.pack()
        w = Label(text='西毒', anchor=W)
        w.config(width=50)
        e = Label(text='東邪', anchor=E)
        e.config(width=50)
        me = Label(text='me', anchor=S)
        me.config(width=50)
        n.pack()
        w.pack()
        e.pack()
        me.pack()
        p = Label(text=players[0].cards_on_hand, anchor=CENTER)
        p.config(width=60)
        p.pack()


root = Finals()
root.mainloop()
